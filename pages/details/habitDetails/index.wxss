/* pages/details/habitDetails/index.wxss */
.habit-details-top{
  width:100%;
  height: 100rpx;
  background: #fff;
}

.habit-details-top-left{
  width: 100rpx;
  height: 100rpx;
  margin-right: 40rpx;
  vertical-align: middle;
  display: inline-block;
  margin-left: 30rpx;
}

.habit-details-top-text{
  display: inline-block;
  font-weight: bold;
  color: #212121;
  font-family: 'PingFang-SC-Heavy';
  line-height: 100rpx;
}

.habit-details-top-right{
  /* display: inline-block; */
  width: 150rpx;
  height: 60rpx;
  vertical-align: middle;
  float: right;
  margin-right: 50rpx;
  padding-top: 20rpx;
}

.habit-details-nav {
  width: 90%;
  margin: auto;
  background: #fff;
  margin-top: 50rpx;
}

.habit-details-nav-top{
  display: flex;
  margin-bottom: 20rpx;
}

.habit-details-nav-top-btn {
  flex:1;
}

.habit-details-nav-top-btn image{
  display: inline-block;
  text-align: center;
  width: 100rpx;
  height: 100rpx;
}

.habit-details-nav-top-btn view {
  text-align: center;
  font-size: 26rpx;
  color:#555;
  font-weight: bold;
}

.habit-details-nav-line {
  width: 90%;
  background: #555;
  height: 1rpx;
  margin: auto;
}

.habit-details-nav-bottom{
  display: flex;
}

.habit-details-nav-bottom view {
  flex: 1;
  text-align: center;
}

.habit-details-text {
  margin-top: 100rpx;
  text-align: center;
}

.habit-details-text image {
  width: 500rpx;
  height: 200rpx;
}
