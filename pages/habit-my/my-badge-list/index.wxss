/* pages/habit-my/my-badge-list/index.wxss */
page {
  background-color: #fff;
}
.badge-image-list-box {
  margin-top: 20rpx;
}

.badge-image-list {
  display: inline-block;
  margin: 30rpx 45rpx;
  text-align: center;
}

.badge-image-list image {
  width: 150rpx;
  height: 150rpx;
  display: inline-block;
}

/* dialog */
.ys-mask{
  position: fixed;
  z-index: 10;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
}

.ys-dialog{
  position: fixed; 
  z-index: 5000;
  top: 40%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;
  border-radius: 16rpx;
  overflow: hidden;
}

.ys-dialog-close {
  position: fixed;
  top: 50rpx;
  right: 0rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 5001;
}


.ys-dialog-close image {
  /* position: fixed;
  top: 50rpx;
  right: 0rpx; */
  width: 50rpx;
  height: 50rpx;
}

.ys-dialog-content {
  background-image: url('https://chenxixiguan.cn/uploads/20200106/cbc78c549eb185856e6bad5f5d174b34.png');
  background-size: 580rpx 580rpx;
  text-align: center;
  width: 580rpx;
  height: 580rpx;
  position: relative;
}

.ys-dialog-content-bg {
  background-image: url('https://chenxixiguan.cn/uploads/20200106/45bb24dab62ac4c88f62cef973688de3.png');
  background-size: 310rpx 410rpx;
  text-align: center;
  width: 310rpx;
  height: 410rpx;
  position: absolute;
  top: 80rpx;
  left: 130rpx;
}

.ys-dialog-content-bg image {
  width: 250rpx;
  height: 270rpx;
  margin-top: 40rpx;
}

.ys-dialog-badge-name {
  color: #fff;
  font-weight: 600;
  font-size: 46rpx;
  margin-top: 200rpx;
}

.ys-dialog-badge-num {
  color: #fff;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.ys-dialog-badge-date {
  color: #fff;
  font-size: 28rpx;
  opacity:0.5;
  margin-top: 10rpx;
}

.ys-dialog-badge-footer {
  position: fixed; 
  z-index: 5000;
  bottom: 3%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;
  border-radius: 16rpx;
  overflow: hidden;
  width:300rpx;
  height:88rpx;
  border-radius: 44rpx;
}


/* canvas绘图区域 */
.ys-dialog-canvas {
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 300px;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;
  border-radius: 16rpx;
  overflow: hidden;
}

.canvas-img image {
  width: 100%;
  height: 980rpx;
}

.canvas-btn {
  text-align: center;
  display: flex;
}

.canvas-btn button {
  flex: 1;
  background: #3ACC88;
  color: #fff;
  border-radius: 44rpx;
  font-size: 35rpx;
  width: 100rpx;
}

