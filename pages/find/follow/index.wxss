/* pages/find/follow/index.wxss */
@import '/style/weui-rpx.wxss';
.follow {
  margin-top: 30rpx;
}

.weui-panel {
  margin: 30rpx 30rpx 0 30rpx;
  border-radius: 10rpx;
}

.weui-panel:before,
.weui-panel:after {
  border-width: 0;
}

.weui-panel__head {
  padding: 20rpx;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-bottom: 1rpx solid #f2f3f5;
}

.weui-panel-head__bd {
  position: relative;
  flex: 1;
  font-size: 30rpx;
  padding-left: 18rpx;
}

.weui-panel-head__bd::before{
  content: " ";
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -15rpx;
  width: 6rpx;
  height: 30rpx;
  background-color: #3ACC88;
}

.weui-panel-head__ft {
  font-size: 26rpx;
  color: #999;
}

.weui-grid {
  width: 25%;
  border-width: 0;
  padding: 30rpx 30rpx;
}

.weui-grid__icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.weui-grid__label {
  font-size: 26rpx;
}


.weui-information {
  margin-top: 20rpx;
  background-color: #fff;
}

.information-head .weui-cell__hd>image {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.information-head .weui-cell__title {
  font-size: 28rpx;
  color: #555;
}

.information-head .weui-badge {
  display: inline-block;
  font-size: 20rpx;
}

.weui-badge>image {
  width: 18rpx;
  height: 18rpx;
  vertical-align: middle;
}

.weui-badge.male {
  background-color: #3fb8e8;
}

.weui-badge.woman {
  background-color: #ea3d84;
}

.information-head .weui-cell__desc {
  font-size: 24rpx;
  line-height: 1;
  color: #999;
}

.information-body {
  padding: 0 30rpx 20rpx 30rpx;
}

.weui-well {
  background-color: #f2f3f5;
  color: #666;
  font-size: 24rpx;
  padding: 24rpx 20rpx;
}

.information__desc {
  font-size: 30rpx;
  color: #555;
  margin-bottom: 10rpx;
}

.information-footer {
  border-top: 1rpx solid #f2f3f5;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  color: #555;
}

.information-footer::before {
  left: 0;
  border-color: #f2f3f5;
}

.weui-color__green {
  color: #3acc88;
}

button.weui-btn {
  font-size: 28rpx;
  min-width: 140rpx;
  border-radius: 200rpx;
  line-height: 2;
  padding: 0 16rpx;
  vertical-align: middle;
}

button[type=default][plain] {
  color: #999;
  border: 1px solid #999;
}

button[type=primary] {
  background-color: #3acc88;
}
