/**index.wxss**/
page{
  background-color: #fff;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.wxapp {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wxapp-logo {
  width: 200rpx;
  height: 200rpx;
  margin: 50rpx;
  border-radius: 50%;
}

.wxapp-name {
  font-size: 38rpx;
  color: #666;
}

.usermotto {
  margin-top: 120px;
}
button{
  width: 500rpx;
  overflow: auto;
  background-color: #3ACC88;
  color: #fff;
  border-radius: 200rpx;
  box-shadow: 0 0 30rpx #3ACC88;
}

.click-btn {
  color: #fff;
  background: #34b679;
}