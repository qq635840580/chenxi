/* pages/details/clock/index.wxss */
page {
  background: #fff;
}

.clock-text {
  width: 100%;
  margin: 0 auto;
}
.clock-text .clock-text-box {
  padding: 50rpx;
}

.clock-text .clock-text-box textarea {
  font-size: 28rpx;
}

.clock-button {
  width: 70%;
  margin: 100rpx auto auto auto;
}

.clock-button button {
  background: #3ACC88;
  color: white;
  font: 36rpx;
  font-weight: bold;
  border-radius: 44rpx;
}