<!--pages/details/detailsNav/index.wxml-->
<!-- 顶部是否加入 -->
<view class='habit-details-top'>
  <image class='habit-details-top-left' src='/uploads/home/jianshen.png'/>
  <view class='habit-details-top-text'>早睡早起</view>
  <image class='habit-details-top-right' src='/uploads/habit/lijijiaru.png'/>
</view>

<!-- 导航顶部 -->
<view class='habit-details-top-nav'>
  <view class='habit-details-top-nav-action'>
    <text  bindtap='saveNav' data-tabflag='1' class="{{tabflag==1?'action-color ':''}}">动态</text>
  </view>  
  <view class='habit-details-top-nav-action'>
    <text  bindtap='saveNav' data-tabflag='2' class="{{tabflag==2?'action-color':''}}">我的</text>
  </view>
</view>

<view wx-if="{{tabflag==1}}">
  <Dynamic/>
</view>

<view wx-if="{{tabflag==2}}">
  <My/>
</view>
