<!--pages/information/praise/index.wxml-->
<view class='weui-information' wx:for="{{list}}" wx:key="id">
  <view class='weui-cell information-head' data-uid='{{item.from_uid}}' catchtap='gotoHomePage'>
    <view class='weui-cell__hd'>
      <image src='{{item.user.avatarUrl}}'></image>
    </view>
    <view class='weui-cell__bd'>
      <view class='weui-cell__title'>
        {{item.user.nickname}} 
      </view>
      <view class='weui-cell__desc'>{{item.create_time}}</view>
    </view>
    <view class='weui-cell__ft'></view>
  </view>
  <view class='information-body' data-detailid='{{item.clock_record_id}}' catchtap='gotoDetails'>
    <view class='information__desc'>{{item.clock_content}}</view>
  </view>
  <navigator url="/pages/find/findDetails/index?id={{item.clock_record_id}}" class='weui-cell information-footer'>
    <view class='weui-cell__bd'>
    坚持 
    <text class='weui-color__green'>{{item.habits.name}}</text>
    习惯
    {{item.continuity_days}}天</view>
    <view class='weui-cell__ft weui-cell__ft_in-access'></view>
  </navigator>
</view>

<view class='weui-nothing' wx:if="{{list.length == 0}}">
  <image mode='widthFix' src='/img/information/nothing.png'></image>
  <view>暂无消息</view>
</view>