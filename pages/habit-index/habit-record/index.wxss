/* pages/habit-index/habit-record/index.wxss */
.calendar {
    background-color: #fff;
    padding-top: 10px;
}
.board {
  color:#999;
}


.habit-detailsMy-top-caledar {
  background: #fff;
  margin: 20rpx auto;
}
.habit-detailsMy-top-caledar .habit-detailsMy-top-caledar-detail {
  padding: 10rpx;
}

.habit-detailsMy-top-caledar-detail-top {
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.habit-detailsMy-top-caledar-detail-top view:nth-child(1) {
  display: inline-block;
}

.habit-detailsMy-top-caledar-detail-top view:nth-child(1) image {
  width: 45rpx;
  height: 45rpx;
  vertical-align: top;
  margin-top: 10rpx;
}

.habit-detailsMy-top-caledar-detail-top .habit-detailsMy-top-caledar-detail-top-left text {
  color:#212121;
  display: inline-block;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
  padding-left: 5rpx;
  margin-left: 20rpx;
}

.habit-detailsMy-top-caledar-detail-top .habit-detailsMy-top-caledar-detail-top-right text {
  color:#999;
  line-height: 45rpx;
  font-size: 26rpx;
}

.habit-detailsMy-top-caledar-detail-top view:nth-child(2) {
  float: right;
  margin-right: 10rpx;
}

.habit-detailsMy-top-caledar-detail-line {
  margin: 20rpx 0 0 0;
  background: #F2F3F5;
  height: 1rpx;
}

.habit-clock-data {
  padding: 10rpx;
}

.habit-clock-data .habit-clock-data-details {
  /* border: 1rpx solid #212121; */
  margin-left: 20rpx;
  padding: 5rpx 0;
}

.habit-clock-data .habit-clock-data-details text:nth-child(1) {
  font-size: 30rpx;
  color:#3ACC88;
  line-height: 40rpx;
  display: inline-block;
  margin-right: 15rpx;
}

.habit-clock-data .habit-clock-data-details text:nth-child(2) {
  font-size: 28rpx;
  color:#555;
  line-height: 40rpx;
  display: inline-block;
}

.habit-clock-data .habit-clock-data-details text:nth-child(3) {
  font-size: 28rpx;
  color:#555;
  line-height: 40rpx;
  float: right;
  padding-top: 10rpx;
}



