/* pages/common/habit-list/index.wxss */
.weui-habit__btn {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 4;
  margin-top: 20rpx;
  text-align: center;
  color: #555;
  border-radius: 10rpx;
  background-color: #fff;
}

.weui-habit {
  width: 90%;
  margin: 20rpx auto auto auto;
}

.weui-habit__hd image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 40rpx;
  vertical-align: middle;
}

.weui-habit__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.weui-habit__bd .weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-habit__title {
  font-size: 36rpx;
  font-weight: 400;
  color: #212121;
}

.weui-habit__desc {
  font-size: 28rpx;
  color: #999;
}

.weui-habit__ft button {
  width: 140rpx;
  height: 56rpx;
  background: #3ACC88;
  text-align: center;
  line-height: 56rpx;
  font-size: 28rpx;
  color: white;
  border-radius: 28rpx;
  font-family:PingFang-SC-Medium;
}

.weui-habit__title {
  padding-right:50rpx;
}

.weui-habit__title view:nth-child(1) {
  font-size: 36rpx;
  font-weight: 800;
  font-family:PingFang-SC-Heavy;
  color: #212121;
}

.weui-habit__title view:nth-child(2) {
  font-size: 28rpx;
  color: #999;
  font-family:PingFang-SC-Medium;
}
