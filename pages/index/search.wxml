<!--pages/index/search.wxml-->
<view class="weui-search-bar">
  <view class="weui-search-bar__form">
    <view class="weui-search-bar__box">
      <icon class="weui-icon-search_in-box" type="search" size="16" color='#ffffff'></icon>
      <input type="text" class="weui-search-bar__input" placeholder="搜索" placeholder-style="color:#ffffff" value="{{inputVal}}" bindinput="inputTyping" />
      <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
        <icon type="clear" size="14" color='#ffffff'></icon>
      </view>
    </view>
  </view>
  <navigator url='../habit/create' class="weui-search-bar__btn" bindtap="">+ 创建</navigator>
</view>
<scroll-view scroll-x class='weui-cate'>
  <view scroll-x class='weui-flex'>
    <view class="weui-navbar__item {{cateIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="cateClick" wx:for="{{cateList}}" wx:key="*this" data-index="{{index}}">
      <view class="weui-navbar__title">{{item}}</view>
    </view>
  </view>
</scroll-view>

<view class='weui-cells'>
  <navigator url="" class='weui-cell weui-habit' wx:for="{{list}}" wx:key="*this" >
    <view class='weui-habit__hd'>
      <image src='{{item.img}}'></image>
    </view>
    <view class='weui-habit__bd'>
      <view class='weui-flex weui-habit__title'>{{item.title}}</view>
      <view class='weui-flex weui-habit__desc'>已有6665897人加入</view>
    </view>
  </navigator>
</view>