<!--pages/details/habitDetails/index.wxml-->
<view>
  <!-- 导航 -->
  <view class='habit-details-nav'>
    <view class='habit-details-nav-top'>
      <view class='habit-details-nav-top-btn' bindtap='gotoRanking'>
        <image src='/uploads/habit/paihangbang.png'/>
        <view>排行榜</view>
      </view>
      <view class='habit-details-nav-top-btn' bindtap='gotoPerson'>
        <image src='/uploads/habit/chengyuan.png'/>
        <view>成员</view>
      </view>
      <view class='habit-details-nav-top-btn' bindtap='openPerson'>
        <image src='/uploads/habit/yaoqinghaoyou.png'/>
        <view>邀请好友</view>
      </view>
      <view class='habit-details-nav-top-btn'  bindtap='gotoInstall'>
        <image src='/uploads/habit/shezhi.png'/>
        <view>设置</view>
      </view>
    </view>
    <view class='habit-details-nav-line'></view>
    <view class='habit-details-nav-bottom'>
      <view><text class='habit-nav-color'>{{total_user}}</text> 人参与</view>
      <view><text class='habit-nav-color'>{{total_clock}}</text> 次打卡</view>
    </view>
  </view>

  <view class='weui-panel'>
  <view class='weui-panel__bd'>
    <view class='weui-information' wx:for="{{list}}" wx:key="{{index}}" wx:if="{{list.length>0}}">
      <view class='weui-cell information-head'>
        <view class='weui-cell__hd' data-uid='{{item.uid}}' bindtap='gotoHomePage'>
          <image src='{{item.user.avatarUrl}}'></image>
        </view>
        <view class='weui-cell__bd'>
          <view class='weui-cell__title'>
            {{item.user.nickname}}
          </view>
          <view class='weui-cell__desc'>{{item.date}}  {{item.time}}</view>
        </view>
        <view class='weui-cell__ft' wx:if='{{item.user.is_attention==0}}' bindtap='followHandler' data-uid='{{item.uid}}'>
          <view class='habit-details-dynamic-one-img-right'>
            <view>第{{item.continuity_days}}天</view>
          </view>
        </view>
      </view>
      <view class='information-body'>
        <view  data-id='{{item.id}}' bindtap='gotoClockInDetails'>
          <view class='information__desc'>{{item.content}}</view>
          <block wx:for="{{item.clock_record_image}}" wx:for-item="imgList" wx:if="{{item.clock_record_image.length==1}}" wx:key="{{index}}">
            <view class='information__desc_one_img'>
              <image src='{{imgList.path}}' mode="aspectFill"/>
            </view>
          </block>

          <block wx:for="{{item.clock_record_image}}" wx:for-item="imgList" wx:if="{{item.clock_record_image.length > 1}}" wx:key="{{index}}">
            <view class='information__desc_img'>
              <image src='{{imgList.path}}' mode="aspectFill"/>
            </view>
          </block>
        </view>
        <view class='weui-well weui-flex'>
          <view class='weui-flex__item'>
            坚持
            <text class='weui-color__green'> {{item.habits.name}} </text>{{item.continuity_days}}天
          </view>
          <view>{{item.support_count}}人在坚持</view>
        </view>
        <view class='weui-tool'>
          <text class='tool-dianzan' bindtap='support' data-id="{{item.id}}">
            <text class='iconfont iconaixin' wx:if="{{item.is_praise==0}}"></text>
            <text class='iconfont iconaixin1 icon-back' wx:if="{{item.is_praise==1}}"></text>
            <text>{{item.support_count}}</text>
          </text>
          <label bindtap='saveIsInput' data-id="{{item.id}}">       
            <text class='tool-pinglun'>
              <text class='iconfont iconxinxi pinglun-icon'></text>
              <text>{{item.comment_count}}</text>
            </text>
          </label>
             
          <text class='iconfont iconfenxiang tool-fenxiang'></text>
          <text class='iconfont icongengduo tool-gengduo'></text>
        </view>
      </view>
      <view class='information-footer'>
        <view wx:for="{{item.comment_data}}" wx:key="{{index}}" wx:for-item="comment">
          <view class='information-footer-box' data-clockId='{{item.id}}' data-contentId='{{comment.id}}' bindtap='clickContent' >
            <text>{{comment.nickname}}：</text>
            <text>{{comment.content}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

<!-- 输入评论框 -->
<view class='pinglun-input' wx:if='{{isInput}}'>
  <input value='{{inputVal}}' focus="{{isInput}}" data-id='{{focusId}}' data-contentid='{{contentId}}' bindconfirm='messageSubmit' bindblur='blurHandler'/>
</view>

  <!-- 无数据时 -->
  <view class='habit-details-text' wx:if="{{list.length==0}}">
    <image src='/uploads/habit/dongtai.png'/>
    <view>一片荒芜</view>
     <view>快来打卡吧！改变从此开始...</view>
  </view>

  <!-- 打卡 -->
  <view class='habit-clock' bindtap='gotoClock'>
    <view class='habit-clock-box'>
      <text>打卡</text>
    </view>
  </view>

</view>
