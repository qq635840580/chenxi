<!--pages/user/index.wxml-->
<view class='page__hd'>
  <view class='user'>
    <image class='user_avatar' src='{{userInfo.avatarUrl}}'></image>
    <view class='user_name'>{{userInfo.nickname}}</view>
    <view class='user_info'>遇到更好的自己</view>
  </view>
</view>
<view class='page__bd_spacing'>
  <view class='weui-info'>
    <navigator url='' class='weui-flex__item'>
      <view class='weui-info__desc'>{{userInfo.clock_count}}</view>
      <view class='weui-info__label'>打卡</view>
    </navigator>
    <navigator url='fans/index' class='weui-flex__item'>
      <view class='weui-info__desc'>{{userInfo.fans_count}}</view>
      <view class='weui-info__label'>粉丝</view>
    </navigator>
    <navigator url='concern/index' class='weui-flex__item'>
      <view class='weui-info__desc'>{{userInfo.follow_count}}</view>
      <view class='weui-info__label'>关注</view>
    </navigator>
  </view>

  <view class='weui-cells'>
    <view class='weui-cell'>
      <view class='weui-cell__hd'>
        <image src='/img/user/invite.png'></image>
      </view>
      <view class='weui-cell__bd'>邀请好友</view>
      <view class='weui-cell__ft weui-cell__ft_in-access'></view>
    </view>
    <navigator url='profile/index' class='weui-cell'>
      <view class='weui-cell__hd'>
        <image src='/img/user/profile.png'></image>
      </view>
      <view class='weui-cell__bd'>个人资料</view>
      <view class='weui-cell__ft weui-cell__ft_in-access'></view>
    </navigator>
  </view>

  <view class='weui-cells'>
    <navigator class='weui-cell'>
      <view class='weui-cell__hd'>
        <image src='/img/user/correlation.png'></image>
      </view>
      <view class='weui-cell__bd'>公众号关联小程序</view>
      <view class='weui-cell__ft weui-cell__ft_in-access'></view>
    </navigator>
  </view>

  <view class='weui-cells'>
    <navigator url='contact/index' class='weui-cell'>
      <view class='weui-cell__hd'>
        <image src='/img/user/contact.png'></image>
      </view>
      <view class='weui-cell__bd'>联系我们</view>
      <view class='weui-cell__ft weui-cell__ft_in-access'></view>
    </navigator>
    <navigator url='question/index' class='weui-cell'>
      <view class='weui-cell__hd'>
        <image src='/img/user/question.png'></image>
      </view>
      <view class='weui-cell__bd'>常见问题</view>
      <view class='weui-cell__ft weui-cell__ft_in-access'></view>
    </navigator>
    <navigator url='about/index' class='weui-cell'>
      <view class='weui-cell__hd'>
        <image src='/img/user/about.png'></image>
      </view>
      <view class='weui-cell__bd'>关于我们</view>
      <view class='weui-cell__ft weui-cell__ft_in-access'></view>
    </navigator>
  </view>
</view>
