/* pages/details/clockInDetails/index.wxss */

.habit-details-dynamic {
  width: 100%;
  background: #fff;
  margin: 20rpx auto;
}

.habit-details-dynamic-one-img {
 
}

.habit-details-dynamic-one-img-top {
  padding: 20rpx;
}

.habit-details-dynamic-one-img-avatar {
  display: inline-block;
}

.habit-details-dynamic-one-img-avatar image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  vertical-align: top;
  margin-top: 10rpx;
}

.habit-details-dynamic-one-img-total {
  display: inline-block;
}

.habit-details-dynamic-one-img-total-top {

}

.habit-details-dynamic-one-img-total-top view:nth-child(1) {
  font-size: 30rpx;
  color: #555;
  font-weight: bold;
  display: inline-block;
  line-height: 28rpx;
  /* margin-top: 20rpx; */
}

.habit-details-dynamic-one-img-total-bottom {
  font-size: 26rpx;
  color:#999;
  margin-top: 5rpx;
}

.habit-details-dynamic-one-img-right {
  float: right;
  margin-top: 10rpx;
}

.habit-details-dynamic-one-img-right text {
  font-size: 28rpx;
  color:#fff;
  border-radius:28px;
  display: inline-block;
  text-align: center;
  line-height: 56rpx;
  width: 140rpx;
  height: 56rpx;
  border: 2rpx solid #3ACC88;
  background: #3ACC88;
}

.habit-details-dynamic-one-img-right view {
  color: #fff;
  font-size: 30rpx;
  padding: 15rpx;
}

.habit-details-dynamic-one-img-text {
  color: #555;
  font-size: 30rpx;
  font-weight: medium;
  padding: 0 20rpx 0 20rpx;
}

.habit-details-dynamic-one-img-text .habit-details-dynamic-one-img-text-one-img {
  height:370rpx;
  background:#CECCCC;
}

.habit-details-dynamic-one-img-text-img {
  /* padding: 0 10rpx; */
}

.habit-details-dynamic-one-img-text-img view {
  width: 33.33%;
  display: inline-block;
}

.habit-details-dynamic-one-img-text-img view view {
  background: #cecccc;
  display: block;
  width: 190rpx;
  height: 190rpx;
  margin: 1rpx auto;
}

.habit-details-dynamic-one-img-bottom {
  padding: 10rpx 20rpx;
}

.habit-details-dynamic-one-img-bottom-left {
  display: inline-block;
}

.habit-details-dynamic-one-img-bottom-left text {
  font-size: 28rpx;
  color: #999;
}


.habit-details-dynamic-one-img-bottom-right {
  float: right;
}

.habit-details-dynamic-one-img-bottom-right text{
  display: inline-block;
  font-size: 36rpx;
  color: #999;
}

.habit-details-dynamic-one-img-comments {
  margin: 30rpx auto 98rpx auto;
  padding: 10rpx 20rpx 0 20rpx;
  border-top: 1rpx solid #F2F3F5;
  width: 100%;
  background: #fff;
}

.habit-details-dynamic-one-img-comments-detail text:nth-child(1) {
  font-size: 28rpx;
  color:#3ACC88;
}

.habit-details-dynamic-one-img-comments-detail text:nth-child(2) {
  font-size: 28rpx;
  color:#555;
}

.clock-in-jianchi {
  width: 95%;
  height: 70rpx;
  margin: 20rpx auto;
  background: #F2F3F5;
}

.clock-in-jianchi .clock-in-jianchi-box {
  padding: 0 20rpx 0 20rpx;
}

.clock-in-jianchi .clock-in-jianchi-box view:nth-child(1) {
  display: inline-block;
  line-height: 30rpx;
}

.clock-in-jianchi .clock-in-jianchi-box view:nth-child(1) text {
  font-size: 24rpx;
  color: #999;
}

.clock-in-jianchi .clock-in-jianchi-box view:nth-child(1) .clock-in-jianchi-box-type {
  color:#3ACC88;
}

.clock-in-jianchi .clock-in-jianchi-box view:nth-child(2) {
  float: right;
  margin-top: 20rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.clock-footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  margin: 0 auto;
  height: 88rpx;
  background: #fff;
  display: flex;
  border-top: 1rpx solid #F2F3F5;
}

.clock-footer text {
  flex: 1;
  text-align: center;
  line-height: 88rpx;
  font-size: 30rpx;
  color: #999;
}

.clock-footer text:nth-child(3) .clock-footer-fenxiang {
  width: 150rpx;
  height: 56rpx;
  background: #3ACC88;
  border-radius: 28rpx;
  line-height: 56rpx;
  display: inline-block;
  color: #fff;
}

