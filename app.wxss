/**app.wxss**/
@import 'style/weui-rpx.wxss';

button::after{
  border-width: 0;
}
.page__bd_spacing{
  padding: 0 30rpx;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.weui-nothing{
  padding-top: 230rpx;
  padding-bottom: 300rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.weui-habit {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 24rpx 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-habit__hd image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 40rpx;
  vertical-align: middle;
}

.weui-habit__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.weui-habit__bd .weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-habit__title {
  font-size: 36rpx;
  font-weight: 400;
  color: #212121;
}

.weui-habit__desc {
  font-size: 28rpx;
  color: #999;
}