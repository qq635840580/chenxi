/* pages/user/contact/index.wxss */

.weui-cells {
  font-size: 30rpx;
}

.weui-cell::before {
  left: 0;
  border-color: #f2f3f5;
}

.weui-cell__hd>image {
  width: 80rpx;
  margin-right: 30rpx;
  vertical-align: middle;
}

.weui-kefu {
  padding-top: 110rpx;
  padding-bottom: 200rpx;
}

.weui-kefu>button {
  width: 600rpx;
  overflow: auto;
  background-color: #3acc88;
  color: #fff;
  border-radius: 200rpx;
  box-shadow: 0 0 30rpx #3acc88;
}

.weui-saoma {
  text-align: center;
  font-size: 30rpx;
  line-height: 1;
  color: #555;
}

.weui-saoma>image {
  width: 300rpx;
  margin-bottom: 10rpx;
}
