/* pages/habit-my/my-badge/index.wxss */
.badge-top {
  background: url('https://chenxixiguan.cn/uploads/20200101/46559514b5817d55b19b7ea21da8f5e8.png');
  width: 100%;
  height: 350rpx;
  background-size: 100% 350rpx;
  position: relative;
}

.badge-top__font {
  font-size: 80rpx;
  color: #fff;
  font-weight: 600;
  position: absolute;
  left: 50rpx;
  top: 30rpx;
}

.badge-top__english {
  font-size: 40rpx;
  color: #fff;
  font-weight: 600;
  position: absolute;
  left: 50rpx;
  top: 150rpx;
}

.badge-top__num {
  font-size: 80rpx;
  color: #fff;
  font-weight: 600;
  position: absolute;
  right: 97rpx;
  top: 47rpx;
}

.badge-top__badge {
  font-size: 30rpx;
  color: #fff;
  font-weight: 600;
  position: absolute;
  right: 60rpx;
  top: 100rpx;
}


.weui-cells {
  margin: -80rpx 30rpx 0 30rpx;
  border-radius: 30rpx;
}

.weui-head {
  margin-top: 30rpx !important;
}

.weui-footer {
  margin-bottom: 30rpx;
}

.weui-cells-log {
  margin-top: 100rpx;
}

.weui-cells:after, .weui-cells:before {
  border-width: 0;
}

.weui-cells_after-title {
  margin-top: 0;
}

.weui-cell {
  padding: 20rpx;
  color: #555;
  font-size: 30rpx;
}

.weui-cell:before {
  border-top-color: #f2f3f5;
}


.weui-cell__bd {
  text-align: left;
  color:#333;
  font-size: 36rpx;
}

.badge-color {
  color: #3acc88;
}

.badge-line {
  color: #0A0103;
  width: 100%;
  text-align: center;
  height: 1rpx;
}

.badge-image {
  border-top: 1rpx solid #f2f3f5;
  display: flex;
  padding: 20rpx 0;
}

.badge-image-list {
  flex: 1;
  text-align: center;
}

.badge-image-list image {
  width: 150rpx;
  height: 200rpx;
  display: inline-block;
  margin: 0 30rpx;
}

.badge-image-list text {
  font-size: 28rpx;
  color: #333;
}
